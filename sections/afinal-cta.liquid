<style>
  /* =========================
     FINAL CTA - ENHANCED PREMIUM
     ========================= */
  .final-cta {
    /* Dikey yüksekliği artırdık, ekranın büyük bir kısmını kaplayacak */
    padding: 220px 40px; 
    background: linear-gradient(145deg, #f6b27b 0%, #f08a5d 100%);
    color: #fff;
    text-align: center;
    position: relative;
    overflow: hidden;
    /* Giriş animasyonu başlangıcı */
    opacity: 0;
    transform: translateY(60px);
    transition: all 1.2s cubic-bezier(0.25, 1, 0.5, 1);
  }

  /* Animasyon tetiklendiğinde */
  .final-cta.is-reveal {
    opacity: 1;
    transform: translateY(0);
  }

  /* Sayfanın genel genişliğine uyum sağlayan büyük konteyner */
  .final-cta-container {
    max-width: 1100px; 
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .final-cta h2 {
    /* Daha büyük ve baskın bir başlık */
    font-size: clamp(36px, 6vw, 72px); 
    font-weight: 600;
    letter-spacing: -2px;
    margin-bottom: 30px;
    line-height: 1.05;
    text-shadow: 0 10px 30px rgba(0,0,0,0.05);
  }

  .final-cta p {
    /* Metin alanını genişlettik ve fontu büyüttük */
    font-size: clamp(16px, 2vw, 22px);
    opacity: 0.95;
    margin-bottom: 60px;
    max-width: 750px;
    line-height: 1.6;
    font-weight: 300;
  }

  /* BUTTON - Daha lüks ve büyük */
  .final-cta a {
    display: inline-block;
    padding: 24px 64px;
    background: #fff;
    color: #000;
    text-decoration: none;
    font-weight: 600;
    border-radius: 60px;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 2px;
    box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .final-cta a:hover {
    transform: scale(1.05) translateY(-5px);
    box-shadow: 0 25px 50px rgba(0,0,0,0.2);
    background: #000;
    color: #fff; /* Hoverda ters renk lüks hissettirir */
  }

  /* =========================
     RESPONSIVE DOKUNUŞLAR
     ========================= */
  @media screen and (max-width: 768px) {
    .final-cta {
      padding: 140px 24px; /* Mobilde de hala uzun ama dengeli */
    }

    .final-cta h2 {
      margin-bottom: 20px;
      letter-spacing: -1px;
    }

    .final-cta p {
      margin-bottom: 40px;
    }

    .final-cta a {
      width: 100%;
      max-width: 320px;
      padding: 20px 40px;
    }
  }
</style>

<section class="final-cta" id="FinalCTASection">
  <div class="final-cta-container">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}">
      {{ section.settings.button_label }}
    </a>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const finalCta = document.getElementById('FinalCTASection');

    const ctaObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          finalCta.classList.add('is-reveal');
        }
      });
    }, { threshold: 0.15 });

    ctaObserver.observe(finalCta);
  });
</script>

{% schema %}
{
  "name": "Final CTA Enhanced",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Designed for confident women"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover pieces that elevate your everyday style and boost your confidence."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Explore The Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Final CTA Enhanced"
    }
  ]
}
{% endschema %}