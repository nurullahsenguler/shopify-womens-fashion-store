<style>
    :root {
      --orange: #ffa800;
      --orange-dark: #ff8a00;
      --white: #ffffff;
      --black: #1a1a1a;
      --glass: rgba(255, 255, 255, 0.15);
    }

  .about-wrapper {
    background: var(--orange);
    color: var(--white);
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    overflow: hidden;
    padding-bottom: 100px;
    /* NAVBAR ƒ∞LE ARASINA BO≈ûLUK EKLEYEN SATIR: */
    padding-top: 120px;
  }

    /* 1. HERO SECTION */
    .about-hero {
      display: flex;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
      padding: 100px 24px;
      gap: 60px;
    }

    .hero-content { flex: 1.2; }
    .hero-image { flex: 0.8; position: relative; }

    .hero-content h1 {
      font-size: clamp(40px, 7vw, 80px); /* Daha dinamik √∂l√ßekleme */
      font-weight: 900;
      line-height: 0.95;
      text-transform: uppercase;
      margin-bottom: 30px;
    }

    .hero-content p {
      font-size: 20px;
      line-height: 1.6;
      opacity: 0.95;
      margin-bottom: 40px;
      max-width: 500px;
    }

    .hero-image img {
      width: 100%;
      border-radius: 40px;
      box-shadow: 20px 20px 0px var(--orange-dark); /* Mobilde ta≈ümamasƒ± i√ßin k√º√ß√ºltt√ºm */
      transition: all 0.5s ease;
    }

    .hero-image:hover img {
      transform: translate(-10px, -10px);
      box-shadow: 30px 30px 0px var(--orange-dark);
    }

    /* 2. STATS BAR */
    .stats-bar {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      background: var(--glass);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      max-width: 1100px;
      margin: 0 auto 100px;
      padding: 40px;
      border-radius: 40px;
      border: 1px solid rgba(255,255,255,0.3);
      text-align: center;
    }

    .stat-item h2 { font-size: 42px; margin: 0; font-weight: 800; }
    .stat-item span { font-size: 12px; text-transform: uppercase; letter-spacing: 2px; opacity: 0.9; }

    /* 3. CORE VALUES */
    .values-section {
      max-width: 1200px;
      margin: 0 auto 100px;
      padding: 0 24px;
    }

    .section-title {
      text-align: center;
      font-size: clamp(30px, 5vw, 40px);
      font-weight: 800;
      margin-bottom: 60px;
      text-transform: uppercase;
    }

    .values-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }

    .value-card {
      background: var(--white);
      color: var(--black);
      padding: 50px 30px;
      border-radius: 40px;
      text-align: center;
      transition: 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .value-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    }

    .value-card .icon-box {
      width: 80px;
      height: 80px;
      background: var(--orange);
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 25px;
      font-size: 35px;
    }

    /* 4. STORY ROWS */
    .story-row {
      display: flex;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto 120px;
      gap: 80px;
      padding: 0 24px;
    }

    .story-row.reverse { flex-direction: row-reverse; }
    .story-text { flex: 1; }
    .story-img { flex: 1; }
    .story-img img { width: 100%; border-radius: 40px; display: block; }
    .story-text h2 { font-size: 36px; margin-bottom: 24px; font-weight: 800; }
    .story-text p { font-size: 18px; line-height: 1.8; opacity: 0.95; }

    /* 5. CTA BANNER */
    .about-cta {
      max-width: 1100px;
      margin: 100px auto 0;
      background: var(--black);
      padding: 80px 40px;
      border-radius: 60px;
      text-align: center;
      margin-left: 20px;
      margin-right: 20px;
    }

    .about-cta h2 { font-size: clamp(30px, 5vw, 48px); margin-bottom: 20px; color: var(--white); font-weight: 800; }
    .about-cta .btn {
      display: inline-block;
      padding: 22px 50px;
      background: var(--orange);
      color: var(--white);
      text-decoration: none;
      border-radius: 100px;
      font-weight: 800;
      font-size: 18px;
      transition: 0.4s;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .about-cta .btn:hover { background: var(--white); color: var(--black); transform: scale(1.05); }

    /* =========================
       RESPONSIVE FIXES
       ========================= */
    @media (max-width: 990px) {
      .about-hero { flex-direction: column; text-align: center; padding: 60px 24px; }
      .hero-content p { margin: 0 auto 40px; }
      .hero-image img { box-shadow: 15px 15px 0px var(--orange-dark); }

      .stats-bar {
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
        margin: 0 20px 80px;
        padding: 30px;
      }

      .story-row, .story-row.reverse {
        flex-direction: column;
        gap: 40px;
        text-align: center;
        margin-bottom: 80px;
      }

      .values-grid { grid-template-columns: 1fr; }

      .about-cta { padding: 60px 24px; margin: 60px 20px 0; }
    }

    @media (max-width: 480px) {
      .stat-item h2 { font-size: 32px; }
      .stat-item span { font-size: 10px; }
      .about-hero { padding-top: 40px; }
    }
</style>

