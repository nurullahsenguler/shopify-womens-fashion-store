<script>
  /* =====================
      VARIANTS
  ===================== */
  const variants = {{ product.variants | json }};
  let selectedOptions = [];

  document.querySelectorAll('.variant-group').forEach((group, i) => {
    const buttons = group.querySelectorAll('.variant-btn');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        buttons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        selectedOptions[i] = btn.dataset.value;
        updateVariant();
      });
    });

    const first = group.querySelector('.variant-btn');
    if (first) {
      first.classList.add('active');
      selectedOptions[i] = first.dataset.value;
    }
  });

  function updateVariant() {
    const match = variants.find(v =>
      v.options.every((opt, i) => opt === selectedOptions[i])
    );
    if (!match) return;

    document.getElementById('variantId').value = match.id;
    document.getElementById('price').innerText =
      (match.price / 100).toLocaleString('en-US', {
        style: 'currency',
        currency: '{{ shop.currency }}'
      });

    if (match.featured_image?.src) {
      document.getElementById('mainImg').src = match.featured_image.src;
    }
  }

  updateVariant();

  /* =====================
      QUANTITY
  ===================== */
  function qty(n) {
    const q = document.getElementById('qty');
    let v = parseInt(q.value) + n;
    if (v < 1) v = 1;
    q.value = v;
    document.getElementById('qtyHidden').value = v;
  }

  /* =====================
      TOP GALLERY SLIDER
  ===================== */
  document.addEventListener("DOMContentLoaded", () => {
    const mainImg = document.getElementById('mainImg');
    const thumbs = Array.from(document.querySelectorAll('.thumbnail'));
    const left = document.querySelector('.gallery-arrow.left');
    const right = document.querySelector('.gallery-arrow.right');
    if (!mainImg || thumbs.length < 2) return;

    let active = 0, start = 0;
    const visible = 7;

    function show(i) {
      mainImg.style.opacity = 0;
      setTimeout(() => {
        mainImg.src = thumbs[i].dataset.image;
        mainImg.style.opacity = 1;
      }, 200);
    }

    function render() {
      thumbs.forEach((t, i) => {
        t.style.display = (i >= start && i < start + visible) ? 'block' : 'none';
        t.classList.toggle('active', i === active);
      });
    }

    function next() {
      if (active < thumbs.length - 1) {
        active++;
        if (active >= start + visible) start++;
        show(active); render();
      }
    }

    function prev() {
      if (active > 0) {
        active--;
        if (active < start) start--;
        show(active); render();
      }
    }

    thumbs.forEach((t, i) =>
      t.addEventListener('click', () => {
        active = i;
        show(active); render();
      })
    );

    left?.addEventListener('click', prev);
    right?.addEventListener('click', next);

    let x = 0;
    mainImg.addEventListener('touchstart', e => x = e.touches[0].clientX);
    mainImg.addEventListener('touchend', e => {
      const dx = e.changedTouches[0].clientX;
      if (x - dx > 50) next();
      if (dx - x > 50) prev();
    });

    render();
  });

  /* =====================
      DESCRIPTION SLIDER
  ===================== */
  document.addEventListener("DOMContentLoaded", () => {
    const desc = document.querySelector('.product-description');
    if (!desc) return;

    const imgs = Array.from(desc.querySelectorAll('img'));
    if (imgs.length < 2) return;

    imgs.forEach(img => img.remove());

    const slider = document.createElement('div');
    slider.className = 'desc-slider';

    const wrap = document.createElement('div');
    wrap.className = 'desc-main-wrapper';

    const main = document.createElement('img');
    main.className = 'desc-main-img';
    main.src = imgs[0].src;

    const left = document.createElement('div');
    left.className = 'desc-arrow left';
    left.innerHTML = '‚Äπ';

    const right = document.createElement('div');
    right.className = 'desc-arrow right';
    right.innerHTML = '‚Ä∫';

    wrap.append(main, left, right);

    const thumbs = document.createElement('div');
    thumbs.className = 'desc-thumbs';

    let active = 0, start = 0;
    const visible = 4;

    function animate(i) {
      main.classList.add('fade-out');
      setTimeout(() => {
        main.src = imgs[i].src;
        main.classList.remove('fade-out');
        main.classList.add('fade-in');
        setTimeout(() => main.classList.remove('fade-in'), 300);
      }, 180);
    }

    function render() {
      thumbs.innerHTML = '';
      imgs.slice(start, start + visible).forEach((img, i) => {
        const idx = start + i;
        const t = document.createElement('img');
        t.src = img.src;
        t.className = 'desc-thumb' + (idx === active ? ' active' : '');
        t.onclick = () => { active = idx; animate(active); render(); };
        thumbs.appendChild(t);
      });
    }

    function next() {
      if (active < imgs.length - 1) {
        active++;
        if (active >= start + visible) start++;
        animate(active); render();
      }
    }

    function prev() {
      if (active > 0) {
        active--;
        if (active < start) start--;
        animate(active); render();
      }
    }

    right.onclick = next;
    left.onclick = prev;

    render();
    slider.append(wrap, thumbs);
    desc.appendChild(slider);
  });

  /* =====================
      SEPET ƒ∞≈ûLEMLERƒ∞ (ALERT Sƒ∞Z)
  ===================== */
  function addToCart() {
    const variantId = document.getElementById('variantId').value;
    const qty = document.getElementById('qtyHidden').value;
    const btn = document.querySelector('.add-to-cart');

    const originalText = btn.innerText;
