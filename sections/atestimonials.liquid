<style>
  /* =========================
     TESTIMONIALS
     TRUST & SOCIAL PROOF
     ========================= */

  .testimonials {
    padding: 140px 32px;
    background: #f9f7f4;
  }

  .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .testimonials-header h2 {
    font-size: 42px;
    font-weight: 600;
    letter-spacing: -0.5px;
    margin-bottom: 14px;
  }

  .testimonials-header p {
    font-size: 16px;
    opacity: 0.65;
  }

  /* GRID */
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 48px;
  }

  /* CARD */
  .testimonial-card {
    background: #fff;
    border-radius: 28px;
    padding: 40px 36px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.04);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 30px 60px rgba(0,0,0,0.08);
  }

  /* STARS */
  .testimonial-stars {
    color: #f2b01e;
    font-size: 14px;
    margin-bottom: 18px;
  }

  /* TEXT */
  .testimonial-text {
    font-size: 15px;
    line-height: 1.6;
    opacity: 0.8;
    margin-bottom: 28px;
  }

  /* AUTHOR */
  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 14px;
  }

  .testimonial-author img {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    object-fit: cover;
  }

  .testimonial-author strong {
    font-size: 14px;
    font-weight: 500;
  }

  .testimonial-author span {
    font-size: 13px;
    opacity: 0.6;
  }

  /* =========================
     TESTIMONIALS RESPONSIVE
     ========================= */
  @media screen and (max-width: 990px) {
    .testimonials {
      padding: 80px 24px; /* Mobilde dikey alanı daralttık */
    }

    .testimonials-header {
      margin-bottom: 50px;
    }

    .testimonials-header h2 {
      font-size: 32px; /* Başlık boyutu dengelendi */
    }

    .testimonials-grid {
      /* Mobilde yan yana 3 kart yerine tek kart düzeni */
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .testimonial-card {
      padding: 32px 28px; /* Kart içi boşluklar mobilde optimize edildi */
    }

    /* Mobilde hover efekti (Yükselme) bazen kaydırmayı zorlaştırır,
       ama senin efektin çok hafif olduğu için bırakıyorum, gayet tatlı. */
  }

  @media screen and (max-width: 480px) {
    .testimonials {
      padding: 60px 20px;
    }

    .testimonial-text {
      font-size: 14px; /* Küçük ekranlarda metni bir tık küçülttük */
      margin-bottom: 20px;
    }
  }
</style>

<section class="testimonials">
  <div class="testimonials-container">
    <div class="testimonials-header">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>

    <div class="testimonials-grid">
      {% for block in section.blocks %}
        <div class="testimonial-card">
          <div class="testimonial-stars">★★★★★</div>

          <div class="testimonial-text">
            {{ block.settings.text }}
          </div>

          <div class="testimonial-author">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.name }}">
            {% endif %}
            <div>
              <strong>{{ block.settings.name }}</strong><br>
              <span>{{ block.settings.location }}</span>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Our Customers Say"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Trusted by women worldwide"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Emily Johnson"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location",
          "default": "New York, USA"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Testimonial",
          "default": "Amazing quality and perfect fit. I feel confident every time I wear it."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [{ "type": "testimonial" }, { "type": "testimonial" }, { "type": "testimonial" }]
    }
  ]
}
{% endschema %}
