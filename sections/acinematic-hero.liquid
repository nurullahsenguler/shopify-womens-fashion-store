<style>
  /* =========================
     CINEMATIC HERO – PREMİUM EDİT
     ========================= */

  .cinematic-hero {
    position: relative;
    width: 100%;
    height: 100vh; 
    overflow: hidden;
    background: #000;
  }

  /* VIDEO - Eski kararma hızı geri geldi */
  .cinematic-hero video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    transition: opacity 1.5s ease; /* Daha yumuşak geçiş */
  }

  /* OVERLAY - Mobilde kenarlardan boşluk bırakıldı */
  .cinematic-overlay {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    opacity: 0;
    transition: opacity 1.2s ease;
    pointer-events: none;
    padding: 0 24px; 
  }

  /* REVEAL STATES - Senin sevdiğin o derin karartma (0.4) */
  .cinematic-hero.is-reveal .cinematic-overlay { opacity: 1; }
  .cinematic-hero.is-reveal video { opacity: 0.4; }

  /* CONTENT - Masaüstü senin orijinal boyutların */
  .hero-content {
    color: #fff;
    max-width: 850px;
    pointer-events: auto;
    padding-top: 120px;
  }

  .hero-content h1 {
    font-size: 56px;
    font-weight: 600;
    letter-spacing: -1px;
    margin-bottom: 20px;
    line-height: 1.1;
  }

  .hero-content p {
    font-size: 18px;
    opacity: 0.85;
    margin-bottom: 35px;
  }

  /* BUTON - Orijinal lüks tasarım */
  .hero-content a {
    display: inline-block;
    padding: 16px 45px;
    background: #fff;
    color: #000;
    text-decoration: none;
    font-weight: 600;
    border-radius: 50px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    font-size: 14px;
    letter-spacing: 1px;
  }

  .hero-content a:hover {
    transform: translateY(-4px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.3);
  }

  /* PRODUCT IMAGE - Orijinal efekt */
  .hero-product {
    margin-top: 45px;
    opacity: 0;
    transform: translateY(30px);
    transition: all 1.2s cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  .cinematic-hero.is-reveal .hero-product {
    opacity: 1;
    transform: translateY(0);
  }

  .hero-product img {
    max-width: 260px;
    height: auto;
  }

  /* =========================
     HERO RESPONSIVE (Mobili Bozmayan Kısım)
     ========================= */
  @media screen and (max-width: 768px) {
    .hero-content h1 {
      font-size: 34px !important; /* Mobilde taşmaz, okunaklı kalır */
      margin-bottom: 15px;
    }

    .hero-content p {
      font-size: 15px !important;
      margin-bottom: 25px;
      padding: 0 10px;
    }

    .hero-product {
      margin-top: 30px;
    }

    .hero-product img {
      max-width: 170px !important; /* Mobilde ekranı kapatmaz */
    }

    .hero-content a {
      padding: 14px 32px;
      font-size: 13px;
    }
  }
</style>

<section class="cinematic-hero" id="cinematicHero">
  <video autoplay muted playsinline loop>
    <source src="{{ section.settings.video_url }}" type="video/mp4">
  </video>

  <div class="cinematic-overlay">
    <div class="hero-content">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}">
        {{ section.settings.button_label }}
      </a>

      {% if section.settings.product_image %}
        <div class="hero-product">
          <img src="{{ section.settings.product_image | image_url: width: 600 }}" alt="Featured Product">
        </div>
      {% endif %}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hero = document.getElementById('cinematicHero');
    // SENİN EFSANE 2.7 SANİYELİK GECİKMELİ GİRİŞİN GERİ GELDİ
    setTimeout(() => {
      hero.classList.add('is-reveal');
    }, 2700); 
  });
</script>

{% schema %}
{
  "name": "Cinematic Hero",
  "settings": [
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Modern Women Collection"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Designed for confident, modern women."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    }
  ],
  "presets": [
    {
      "name": "Cinematic Hero"
    }
  ]
}
{% endschema %}