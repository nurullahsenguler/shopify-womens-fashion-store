<style>
  /* =========================
     FEATURED COLLECTION
     PREMIUM / TRUST BRAND
     ========================= */

  .featured-collection {
    padding: 140px 32px;
    background: linear-gradient(180deg, #f6f5f3 0%, #ffffff 65%);
  }

  .fc-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* HEADER */
  .fc-header {
    text-align: center;
    margin-bottom: 90px;
  }

  .fc-header h2 {
    font-size: 44px;
    font-weight: 600;
    letter-spacing: -0.6px;
    margin-bottom: 14px;
  }

  .fc-header p {
    font-size: 16px;
    opacity: 0.65;
  }

  /* GRID */
  .fc-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 56px;
  }

  /* ITEM BASE */
  .fc-item {
    text-decoration: none;
    color: #000;
    opacity: 0;
    transition:
      opacity 0.9s ease,
      transform 0.9s ease;
  }

  /* ENTRY DIRECTIONS */
  .fc-item.from-left {
    transform: translateX(-80px);
  }

  .fc-item.from-center {
    transform: translateY(80px);
  }

  .fc-item.from-right {
    transform: translateX(80px);
  }

  .fc-item.is-visible {
    opacity: 1;
    transform: translate(0, 0);
  }

  /* IMAGE */
  .fc-image {
    position: relative;
    overflow: hidden;
    border-radius: 28px;
  }

  .fc-image img {
    width: 100%;
    display: block;
    transition: transform 0.9s ease;
  }

  /* OVERLAY */
  .fc-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.22);
    opacity: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.5s ease;
  }

  .fc-overlay span {
    color: #fff;
    font-size: 14px;
    letter-spacing: 0.4px;
    padding: 12px 30px;
    border: 1px solid rgba(255,255,255,0.6);
    border-radius: 30px;
    backdrop-filter: blur(6px);
  }

  /* HOVER */
  .fc-item:hover img {
    transform: scale(1.1);
  }

  .fc-item:hover .fc-overlay {
    opacity: 1;
  }

  /* INFO */
  .fc-info {
    margin-top: 22px;
    text-align: center;
  }

  .fc-info h3 {
    font-size: 17px;
    font-weight: 500;
    margin-bottom: 6px;
  }

  .fc-info span {
    font-size: 14px;
    opacity: 0.6;
  }

  /* =========================
     FEATURED COLLECTION RESPONSIVE
     ========================= */
  @media screen and (max-width: 990px) {
    .featured-collection {
      padding: 80px 20px; /* Padding mobilde biraz daraltıldı */
    }

    .fc-header {
      margin-bottom: 50px;
    }

    .fc-header h2 {
      font-size: 30px; /* Başlık mobilde küçültüldü */
    }

    .fc-grid {
      /* Mobilde 1 veya 2 kolon seçimi sana kalmış
         ama premium bir duruş için genelde 1 tam kolon
         veya 2 küçük kolon tercih edilir. 1 kolon yapıyorum: */
      grid-template-columns: 1fr;
      gap: 40px;
    }

    /* MOBİLDE ANIMASYON DÜZELTME */
    /* Mobilde her şey alt alta geleceği için yandan gelme
       yerine hepsini aşağıdan yukarı yumuşakça gelecek şekilde eşitleyelim: */
    .fc-item.from-left,
    .fc-item.from-right,
    .fc-item.from-center {
      transform: translateY(40px); /* Hepsini aşağıdan yukarı yaptık */
    }

    /* Mobilde hover overlay (View Product) genelde görünmez
       çünkü 'hover' mobilde tıklama ile aynıdır.
       Görseli daha temiz tutmak için mobilde overlay opacity artırılabilir
       ya da direkt kaldırılabilir. */
    .fc-overlay {
        opacity: 0; /* Mobilde görselin netliği için kapalı kalsın */
    }

    .fc-image {
        border-radius: 20px; /* Mobilde biraz daha yumuşak köşeler */
    }

    .fc-info h3 {
      font-size: 16px;
    }
  }

  @media screen and (max-width: 480px) {
    .fc-grid {
      gap: 30px;
    }
  }
</style>

<section class="featured-collection">
  <div class="fc-container">
    <div class="fc-header">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>

    <div class="fc-grid">
      {% assign collection = collections[section.settings.collection] %}

      {% for product in collection.products limit: 3 %}
        <a
          href="{{ product.url }}"
          class="
            fc-item
            {% if forloop.index == 1 %}from-left{% endif %}
            {% if forloop.index == 2 %}from-center{% endif %}
            {% if forloop.index == 3 %}from-right{% endif %}
          "
        >
          <div class="fc-image">
            <img
              src="{{ product.featured_image | image_url: width: 900 }}"
              alt="{{ product.title }}"
            >

            <div class="fc-overlay">
              <span>View Product</span>
            </div>
          </div>

          <div class="fc-info">
            <h3>{{ product.title }}</h3>
            <span>{{ product.price | money }}</span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const items = document.querySelectorAll('.fc-item');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      { threshold: 0.25 }
    );

    items.forEach((item) => observer.observe(item));
  });
</script>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collection"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our most loved pieces"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
